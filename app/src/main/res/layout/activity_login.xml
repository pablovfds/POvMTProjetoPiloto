<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.povmt.les.povmtprojetopiloto.Views.Activities.LoginActivity">

    <TextView
        android:text="@string/app_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:id="@+id/label_1"
        tools:text="@string/app_name2"
        android:textSize="36sp"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="@color/cor_branca"
        />

    <TextView
        android:text="@string/app_name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_1"
        android:layout_alignStart="@+id/label_1"
        android:layout_marginTop="20dp"
        android:id="@+id/label_2"
        tools:text="@string/app_name3"
        android:textSize="36sp"
        android:layout_alignEnd="@+id/label_1"
        android:textAlignment="center"
        android:textColor="@color/cor_branca"
        />

    <TextView
        android:text="@string/app_name4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_2"
        android:layout_alignStart="@+id/label_2"
        android:layout_marginTop="15dp"
        android:id="@+id/label_3"
        tools:text="@string/app_name4"
        android:textSize="36sp"
        android:layout_alignEnd="@+id/label_2"
        android:textAlignment="center"
        android:textColor="@color/cor_branca"
        />

    <com.google.android.gms.common.SignInButton
        android:layout_below="@+id/label_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:id="@+id/sign_in_button_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        >

    </com.google.android.gms.common.SignInButton>

    <TextView
        android:text="@string/app_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_in_button_google"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:id="@+id/label_4"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        tools:text="@string/app_description" />

</RelativeLayout>
